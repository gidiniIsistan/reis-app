---
export const prerender = true;
const pathName = Astro.url.pathname;
const pathParts = pathName.split('/');//            /class/:classId/group/:groupId/dasdasdsadsa
const subPath = pathParts.slice(0, 5).join('/');//0/1    /2       /3    /4       /5
---
<a href={subPath} class=`flex items-center w-full hover:bg-lilac-400 dark:hover:bg-lilac-600 rounded-lg text-lilac-100 hover:text-white ${pathName === subPath || pathParts[5] === 'dx_question' ? 'bg-lilac-400 dark:bg-lilac-600': ''}`>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-9">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6A2.25 2.25 0 0 1 6 3.75h2.25A2.25 2.25 0 0 1 10.5 6v2.25a2.25 2.25 0 0 1-2.25 2.25H6a2.25 2.25 0 0 1-2.25-2.25V6ZM3.75 15.75A2.25 2.25 0 0 1 6 13.5h2.25a2.25 2.25 0 0 1 2.25 2.25V18a2.25 2.25 0 0 1-2.25 2.25H6A2.25 2.25 0 0 1 3.75 18v-2.25ZM13.5 6a2.25 2.25 0 0 1 2.25-2.25H18A2.25 2.25 0 0 1 20.25 6v2.25A2.25 2.25 0 0 1 18 10.5h-2.25a2.25 2.25 0 0 1-2.25-2.25V6ZM13.5 15.75a2.25 2.25 0 0 1 2.25-2.25H18a2.25 2.25 0 0 1 2.25 2.25V18A2.25 2.25 0 0 1 18 20.25h-2.25A2.25 2.25 0 0 1 13.5 18v-2.25Z" />
    </svg>
    <h1 class="py-2 ml-1 flex-1 font-semibold">Preguntas Derivadas</h1>
    <span class="relative flex mx-1 h-3 w-3">
        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-lilac-200 opacity-75"></span>
        <span class="relative inline-flex rounded-full h-3 w-3 bg-lilac-200"></span>
    </span>
</a>
<a href={subPath + '/org'} class=`flex items-center w-full hover:bg-lilac-400 dark:hover:bg-lilac-600 rounded-lg text-lilac-100 hover:text-white ${pathName === subPath+'/org' ? 'bg-lilac-400 dark:bg-lilac-600': ''}`>
<svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-width="1.5" class="size-9" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 0 0 3.741-.479 3 3 0 0 0-4.682-2.72m.94 3.198.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0 1 12 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 0 1 6 18.719m12 0a5.971 5.971 0 0 0-.941-3.197m0 0A5.995 5.995 0 0 0 12 12.75a5.995 5.995 0 0 0-5.058 2.772m0 0a3 3 0 0 0-4.681 2.72 8.986 8.986 0 0 0 3.74.477m.94-3.197a5.971 5.971 0 0 0-.94 3.197M15 6.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm6 3a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Zm-13.5 0a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Z"/></svg>
    <h1 class="py-2 ml-1 flex-1 font-semibold">Organizacion del Grupo</h1>
    <span class="relative flex mx-1 h-3 w-3">
        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-lilac-200 opacity-75"></span>
        <span class="relative inline-flex rounded-full h-3 w-3 bg-lilac-200"></span>
    </span>
</a>
<a href={subPath + '/new-questions'} class=`flex items-center w-full hover:bg-lilac-400 dark:hover:bg-lilac-600 rounded-lg text-lilac-100 hover:text-white ${pathName === subPath+'/new-questions' ? 'bg-lilac-400 dark:bg-lilac-600': ''}`>
    <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-9"><path stroke-linecap="round" stroke-linejoin="round" d="M3.375 19.5h17.25m-17.25 0a1.125 1.125 0 0 1-1.125-1.125M3.375 19.5h7.5c.621 0 1.125-.504 1.125-1.125m-9.75 0V5.625m0 12.75v-1.5c0-.621.504-1.125 1.125-1.125m18.375 2.625V5.625m0 12.75c0 .621-.504 1.125-1.125 1.125m1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125m0 3.75h-7.5A1.125 1.125 0 0 1 12 18.375m9.75-12.75c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125m19.5 0v1.5c0 .621-.504 1.125-1.125 1.125M2.25 5.625v1.5c0 .621.504 1.125 1.125 1.125m0 0h17.25m-17.25 0h7.5c.621 0 1.125.504 1.125 1.125M3.375 8.25c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125m17.25-3.75h-7.5c-.621 0-1.125.504-1.125 1.125m8.625-1.125c.621 0 1.125.504 1.125 1.125v1.5c0 .621-.504 1.125-1.125 1.125m-17.25 0h7.5m-7.5 0c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125M12 10.875v-1.5m0 1.5c0 .621-.504 1.125-1.125 1.125M12 10.875c0 .621.504 1.125 1.125 1.125m-2.25 0c.621 0 1.125.504 1.125 1.125M13.125 12h7.5m-7.5 0c-.621 0-1.125.504-1.125 1.125M20.625 12c.621 0 1.125.504 1.125 1.125v1.5c0 .621-.504 1.125-1.125 1.125m-17.25 0h7.5M12 14.625v-1.5m0 1.5c0 .621-.504 1.125-1.125 1.125M12 14.625c0 .621.504 1.125 1.125 1.125m-2.25 0c.621 0 1.125.504 1.125 1.125m0 1.5v-1.5m0 0c0-.621.504-1.125 1.125-1.125m0 0h7.5" />
    </svg>
    <h1 class="py-2 ml-1 flex-1 font-semibold">Nuevas Preguntas</h1>
    <span class="relative flex mx-1 h-3 w-3">
        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-lilac-200 opacity-75"></span>
        <span class="relative inline-flex rounded-full h-3 w-3 bg-lilac-200"></span>
    </span>
</a>
<a href={subPath + '/gen'} class=`flex items-center w-full hover:bg-lilac-400 dark:hover:bg-lilac-600 rounded-lg text-lilac-100 hover:text-white ${pathName === subPath+'/gen' ? 'bg-lilac-400 dark:bg-lilac-600': ''}`>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-9">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4.745 3A23.933 23.933 0 0 0 3 12c0 3.183.62 6.22 1.745 9M19.5 3c.967 2.78 1.5 5.817 1.5 9s-.533 6.22-1.5 9M8.25 8.885l1.444-.89a.75.75 0 0 1 1.105.402l2.402 7.206a.75.75 0 0 0 1.104.401l1.445-.889m-8.25.75.213.09a1.687 1.687 0 0 0 2.062-.617l4.45-6.676a1.688 1.688 0 0 1 2.062-.618l.213.09" />
    </svg>          
    <h1 class="py-2 ml-1 flex-1 font-semibold">Respuesta Generatriz</h1>
    <span class="relative flex mx-1 h-3 w-3">
        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-lilac-200 opacity-75"></span>
