---
export interface Props {
    id: string;
    title: string;
    gen_question: string;
    is_active: boolean;
}

const { id, title, gen_question, is_active } = Astro.props;
---
<tr class="rounded-lg bg-white dark:bg-lilac-600 border-b border-gray-300 dark:border-lilac-800 transition-colors" id={"recorrido-row" + id}>
    <!-- Title -->
    <td class="py-4 px-3">
        <p>{title}</p>
    </td>
    <!-- Question -->
    <td class="py-4 pr-3">
        <p>{gen_question}</p>
    </td>
    <!-- edit -->
    <td class="py-4 pr-3 text-center">
        <a href={`/recorrido/${id}/edit`}
            class="block text-red-500 rounded-md p-2 hover:bg-lilac-200 hover:-translate-y-1 hover:scale-110 transition ease-in-out delay-75"
        >
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 mx-auto">
                <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
            </svg>
        </a>
    </td>
    <!-- view -->
    <td class="py-4 pr-3">
        <a href={`/class?recorrido_id=${id}`}
            class="flex text-red-500 rounded-md p-2 hover:bg-lilac-200 hover:-translate-y-1 hover:scale-110 transition ease-in-out delay-75"
        >
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 mx-auto">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0 0 13.5 3h-6a2.25 2.25 0 0 0-2.25 2.25v13.5A2.25 2.25 0 0 0 7.5 21h6a2.25 2.25 0 0 0 2.25-2.25V15m3 0 3-3m0 0-3-3m3 3H9" />
            </svg>
        </a>
    </td>
</tr>
