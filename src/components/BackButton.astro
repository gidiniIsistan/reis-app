---
export const prerender = true;
interface Props {
    href: string;
    text: boolean;
}

const { href, text } = Astro.props;
---
<a
    id="backButton"
    href={href}
    class="flex text-lg font-semibold hover:-translate-y-1 hover:scale-110 transition ease-in-out delay-75"
>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 15L3 9m0 0l6-6M3 9h12a6 6 0 0 1 0 12h-3" />
    </svg>
    {text && <span class="ml-2">Volver</span>}
</a>
